{% extends "base.jinja" %}

{% block head_extras %}
<style>
    main {
        padding: 20px;
    }

    #post-feed {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .post {
        padding: 1rem;
        border: 1px solid #ccc;
        border-radius: 0.5rem;
    }

    .post h2 {
        margin: 0;
    }

    .post h3 {
        font-size: 16px;
        margin: 0;
        color: #666;
    }

    #form-container {
        padding: 1em 5em;
    }
</style>
{% endblock %}

{% block content %}
<main>
    <h1>Postboard</h1>

    <div id="form-container">
        <form method="POST" action="/post">
            <input type="text" name="title" placeholder="Title">
            <input type="text" name="author" placeholder="Author">
            <textarea name="content" placeholder="Content"></textarea>
            <button type="submit">Post</button>
        </form>
    </div>

    <div id="post-feed">
        {% for post in posts %}
        <div class="post">
            <div class="">
                <h2>{{ post.title }}</h2>
                <h3>{{ post.author }}</h3>
            </div>
            <p>{{ post.content }}</p>
        </div>
        {% endfor %}
    </div>
</main>
{% endblock %}

</html>